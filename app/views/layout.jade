doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    block title
        title= title
    
    block css
        link(rel='stylesheet', href='/css/reset.css')
        link(rel='stylesheet', href='/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/style.css')

    meta(name='google-site-verification' content='on2WGKiF6tBU4f5oHszJyx_8Iz6pTqAoTJ_H7VDtZbI')
    block metaog
        meta(property='og:title' content='#{title}')
        meta(property='og:site_name' content='#{title}')
        meta(property='og:description' content='#{description}')
        meta(property='og:url' content='#{canonical}')
        meta(property='og:image' content='#{canonical}/img/tsbst-logo-fb.jpg')
        meta(property='og:type' content='article')
    
    block js
        if ENV_DEVELOPMENT
            script(src='http://localhost:35729/livereload.js')

    body(class='#{bodyclass}')
        div#wrapper
            header.anime
                include header
            
            block content

            footer.anime
                include footer

            div#ph
            
            include modal

            div#loader
            
        script(src='/js/jquery.min.js')
        script(src='/js/navigate.js')
        script(src='/js/plugins.js')
        
        script(src='/js/YoutubePlayer.js')
